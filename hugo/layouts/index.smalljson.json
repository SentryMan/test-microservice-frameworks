{
  "title": {{ .Site.Title | jsonify }},
  "baseURL": {{ .Site.BaseURL | jsonify }},
  "items": [
    {{- $pages := where .Site.RegularPages "Type" "in" .Site.Params.mainSections -}}
    {{- $pages = $pages.ByDate.Reverse -}}
    {{- range $i, $p := first 10 $pages -}}
    {{- if $i }},{{ end -}}
    {
      "title": {{ $p.Title | jsonify }},
      "date": "{{ with $p.Params.date }}{{ (time.AsTime .).Format "2006-01-02" }}{{ else }}{{ $bn := (or $p.File.TranslationBaseName $p.File.BaseFileName) }}{{ $m := findRE `\d{4}-\d{2}-\d{2}` $bn }}{{ if gt (len $m) 0 }}{{ (time.AsTime (index $m 0)).Format "2006-01-02" }}{{ else }}{{ $p.Date.Format "2006-01-02" }}{{ end }}{{ end }}",
      "url": {{ $p.RelPermalink | jsonify }}
    }
    {{- end -}}
  ]
}
